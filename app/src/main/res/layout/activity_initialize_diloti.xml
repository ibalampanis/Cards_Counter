<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_initialize_diloti"
    android:background="@drawable/scratchy_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/cb_init_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cb_init_a"
        android:layout_below="@+id/et_points_team_b"
        android:layout_marginStart="60dp"
        android:layout_toEndOf="@+id/cb_init_a" />

    <TextView
        android:id="@+id/tv_disp_sharing"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_disp_points_team_b"
        android:text="Ομάδα που μοιράζει :"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_points_team_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_disp_points_team_a"
        android:layout_toEndOf="@+id/tv_disp_points_team_b"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_disp_points_team_b"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_disp_points_team_a"
        android:text="\nΠόντοι Ομάδας B :"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_points_team_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_disp_name_team_b"
        android:layout_toEndOf="@+id/tv_disp_points_team_a"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_disp_points_team_a"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_disp_name_team_b"
        android:text="\nΠόντοι Ομάδας Α :"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_name_team_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_disp_name_team_a"
        android:layout_toEndOf="@+id/tv_disp_name_team_a"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_disp_name_team_b"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_disp_name_team_a"
        android:text="\nΌνομα Ομάδας B :"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b_save_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:onClick="clickOnSaveChanges"
        android:textAllCaps="false"
        android:text="Αποθήκευση Αλλαγών" />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:text="Αρχικοποίηση Τιμών"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_disp_name_team_a"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_header"
        android:layout_marginTop="28dp"
        android:text="\nΌνομα Ομάδας Α :"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_name_team_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_disp_name_team_a"
        android:layout_toEndOf="@+id/tv_disp_name_team_a"
        android:ems="10"
        android:inputType="textPersonName" />

    <CheckBox
        android:id="@+id/cb_init_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_disp_sharing"
        android:layout_below="@+id/et_points_team_b"
        android:layout_toEndOf="@+id/tv_disp_points_team_b"
        android:checked="true" />

</RelativeLayout>
